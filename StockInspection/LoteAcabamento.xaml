<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockInspection.LoteAcabamento"
             Title="Envio para o Acabamento">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Text="Número do Lote"
               Grid.Row="0"
               HorizontalTextAlignment="Center"
               FontSize="Title" />

        <Entry x:Name="txtNumeroLote"
               Placeholder="Digite o número do lote"
               Grid.Row="1"
               HorizontalTextAlignment="Center" />

        <Button Text="Acabamento"
                Grid.Row="2"
                Clicked="Button_Clicked" />

        <Label x:Name="lblInformacoesLote"
               Grid.Row="2"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               FontSize="Small"
               IsVisible="False" />

        <Image Source="icone_maquina_costura.png"
               Grid.Row="0"
               HorizontalOptions="End" />
    </Grid>
</ContentPage>
